<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_spinner_card"
        android:elevation="4dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <Spinner
            android:id="@+id/spinnerPlots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionsColumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnToggleDraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/icon_draw_green"
            app:tint="@android:color/white"
            app:backgroundTint="#B9AAAA"
            android:contentDescription="@string/toggle_drawing" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnSavePlot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/icon_save"
            app:tint="@android:color/white"
            app:backgroundTint="#B9AAAA"
            android:contentDescription="@string/save_plot" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/icon_delete"
            app:tint="@android:color/white"
            app:backgroundTint="#B9AAAA"
            android:contentDescription="@string/clear_plot" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnOpenPlotsBottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/icon_list"
        app:tint="@android:color/white"
        app:backgroundTint="#B9AAAA"
        android:contentDescription="@string/open_saved_plots" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
